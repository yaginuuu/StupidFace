<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    tools:context=".CameraSampl" >

    <FrameLayout
        android:id="@+id/fl_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/btn_autofocus"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:text="Autofocus" />

        <Button
            android:id="@+id/btn_change_camera_direction"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="direction" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_take"
        android:background="@drawable/chinami"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fl_camera" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="画面にタッチしたらいいことあるかもよ！"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff00ff"
        android:textSize="30sp" />

</RelativeLayout>